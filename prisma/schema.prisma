generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

  model Game {
  id  String @id @default(uuid())
  title String //Aura Archive
  genre  String //Fighting, Adventure, RPG
  multiplayer Boolean @default(true)
  size Int // 145GB
  price Decimal // 299.99
  platform  String //PC, PS5, Xbox X/S
  createdAt DateTime @default(now())
  releaseDate DateTime @default(now())

  characters Character[]
  }
  model Character {
  id   String @id @default(uuid())
  name String // Dexter
  age Int // 34
  isALive Boolean @default(true) // Yes, he's still alive. 
  forcePower Int // 85
  intelligence Int // 160q.i
  agility String // High
  magic String // It has no magic.
  guns String // A sedative, knifes and a chainsaw
  isDLC Boolean @default(false)

  gameId String
  Game Game @relation(fields: [gameId], references: [id], onDelete: Cascade )
  }