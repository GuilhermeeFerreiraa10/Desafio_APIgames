generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Aluno {
  id String @id @default(uuid())
  nome String @db.VarChar(120)
  email String @unique @db.Char(60)
  senha String
  dtNascimento DateTime? @db.Date @map("dt_nascimento")
  formado Boolean @default(false)

  dtCriacao DateTime @map("dt_criacao") @default(now())
  dtAtualizacao DateTime @map("dt_atualizacao") @updatedAt

  @@map("aluno")
}

model Curso {
  id String @id @default(uuid())
  titulo String
  ementa String
  cargaHoraria Decimal
  maxAlunos Int @default(30) @db.SmallInt @map("max_alunos")
  status String

  dtCriacao DateTime @map("dt_criacao") @default(now())
  dtAtualizacao DateTime @map("dt_atualizacao") @updatedAt

  @@map("curso")
}

model Material {
  id Int @id @default(autoincrement())
  titulo String
  descricao String
  link String
  disponivel String

  dtCriacao DateTime @map("dt_criacao") @default(now())
  dtAtualizacao DateTime @map("dt_atualizacao") @updatedAt

  @@map("material")
}
