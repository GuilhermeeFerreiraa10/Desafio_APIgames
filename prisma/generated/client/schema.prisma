generator client {
  provider = "prisma-client-js"
  output   = "./generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Student {
  id       String    @id @default(uuid()) @db.Uuid
  name     String    @db.VarChar(120)
  email    String    @unique @db.Char(60)
  password String
  dtBirth  DateTime? @map("dt_birth") @db.Date
  formed   Boolean   @default(false)

  dtCreate DateTime @default(now()) @map("dt_create")
  dtUptade DateTime @updatedAt @map("dt_uptade")

  adress     Adress?
  reviews    Assessment[]
  Matriculas Matricula[]

  @@map("student")
}

model Adress {
  id           String @id @default(uuid()) @db.Uuid
  road         String @db.VarChar(30)
  neighborhood String @db.VarChar(30)
  number       Int
  city         String @db.VarChar(50)

  idStudent String  @unique @db.Uuid
  student   Student @relation(fields: [idStudent], references: [id])

  @@map("adress")
}

model Assessment {
  id           String   @id @default(uuid()) @db.Uuid
  Discipline   String   @db.VarChar(30)
  notice       Int      @db.SmallInt
  dtAssessment DateTime @default(now()) @map("dt_assessment")

  idStudent String  @map("id_student") @db.Uuid
  student   Student @relation(fields: [idStudent], references: [id])

  @@map("assessment")
}

model Course {
  id          String  @id @default(uuid()) @db.Uuid
  title       String
  ementa      String
  hourlyLoad  Decimal
  maxStudents Int     @default(30) @map("max_alunos") @db.SmallInt
  status      String

  dtCreate DateTime @default(now()) @map("dt_create")
  dtUptade DateTime @updatedAt @map("dt_uptade")

  Matriculas Matricula[]

  @@map("course")
}

model Matricula {
  idStudent   String   @map("id_student") @db.Uuid
  idCourse    String   @map("id_course") @db.Uuid
  dtMatricula DateTime @default(now()) @map("dt_maricula")

  student Student @relation(fields: [idStudent], references: [id])
  course  Course  @relation(fields: [idCourse], references: [id])

  @@id([idStudent, idCourse])
  @@map("matricula")
}

model Material {
  id          Int    @id @default(autoincrement())
  title       String
  discription String
  link        String
  avaliable   String

  dtCreate DateTime @default(now()) @map("dt_create")
  dtUptade DateTime @updatedAt @map("dt_uptade")

  @@map("material")
}
